{
	"name": "SynthECG CUDA Environment",
	"image": "nvidia/cuda:12.4.0-runtime-ubuntu22.04",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.11"
		}
	},
	"runArgs": [
		"--gpus", "all"
	],
	"postCreateCommand": "apt-get update && apt-get install -y gcc-11 g++-11 build-essential && pip install --upgrade pip",
	"customizations": {
		"vscode": {
			"extensions": [
				"github.copilot",
				"github.copilot-chat",
				"ms-python.debugpy",
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	},
	"workspaceFolder": "/root/SynthECG",
	"mounts": [
		"source=${localWorkspaceFolder},target=/root/SynthECG,type=bind"
	]
}